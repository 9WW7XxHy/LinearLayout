<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="#F40D56"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_weight="2"
            android:background="#E3CE12"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:background="#1CB311"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:background="#B622C6"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white" />



        </LinearLayout>
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="#10E891"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white" />



        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="#E3CE12"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="#521ABBCA"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="#5E5B45"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>